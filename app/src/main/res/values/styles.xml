<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailChips">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">2sp</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>

    <style name="StatProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">25dp</item>
        <item name="android:progressBackgroundTint">@color/gray</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>
</resources>